# Application Settings
APP_NAME=BIZ_MANAGE_PRO
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here
API_V1_STR=/api/v1

# Server Settings
HOST=0.0.0.0
PORT=8000
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174
SSL_KEYFILE=
SSL_CERTFILE=

# Database Settings
DATABASE_URL=postgresql://user:password@localhost:5432/biz_manage_pro
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Email Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_TEMPLATES_DIR=app/email-templates

# File Upload Settings
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/app.log

# Monitoring Settings
PROMETHEUS_METRICS_PORT=9090
ENABLE_METRICS=True

# Security Settings
CORS_ORIGINS=http://localhost:5173,http://localhost:5174
RATE_LIMIT_PER_MINUTE=60
SESSION_SECRET_KEY=your-session-secret-key-here
ENABLE_HTTPS=False

# Feature Flags
ENABLE_WEBSOCKET=True
ENABLE_CACHING=True
ENABLE_ANALYTICS=True
ENABLE_NOTIFICATIONS=True

# External Services
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# Backup Settings
BACKUP_DIR=backups
BACKUP_SCHEDULE=0 0 * * *  # Daily at midnight
BACKUP_RETENTION_DAYS=7

# Cache Settings
CACHE_TTL=3600  # 1 hour
CACHE_MAX_SIZE=1000
CACHE_STRATEGY=LRU

# Analytics Settings
ANALYTICS_ENABLED=True
ANALYTICS_SAMPLE_RATE=1.0
ANALYTICS_BATCH_SIZE=100

# Notification Settings
NOTIFICATION_QUEUE_SIZE=1000
NOTIFICATION_BATCH_SIZE=100
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5

# WebSocket Settings
WEBSOCKET_PING_INTERVAL=20
WEBSOCKET_PING_TIMEOUT=20
WEBSOCKET_MAX_SIZE=1048576  # 1MB 